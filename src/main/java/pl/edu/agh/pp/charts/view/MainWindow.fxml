<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="800" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>
    <top>
        <HBox>
           <children>
               <Button fx:id="fileButton" onAction="#handleFileButtonAction" text="Choose config file" />
           </children>
        </HBox>
    </top>
    <center>
        <LineChart fx:id="lineChart">
            <xAxis><NumberAxis label="Hour" tickUnit="1" fx:id="xAxis" /></xAxis>
            <yAxis><NumberAxis label="Duration in traffic" tickUnit="1" /></yAxis>
        </LineChart>
    </center>
    <bottom>
        <VBox alignment="CENTER">
           <children>
            <HBox>
               <children>
                  <Label text="Type" />
                  <ComboBox fx:id="typeComboBox" onAction="#handleDurationAction" />
               </children>
            </HBox>
               <HBox>
                  <children>
                      <Label text="Day" />
                      <ComboBox fx:id="dayComboBox" onAction="#handleDurationAction" />
                  </children>
               </HBox>
               <HBox>
                  <children>
                      <Label text="ID" />
                      <ComboBox fx:id="idComboBox" onAction="#handleDurationAction" />
                  </children>
               </HBox>
               <HBox>
                  <children>
                      <Label text="Duration visible: " />
                      <CheckBox fx:id="durationCheckBox" onAction="#handleDurationAction" />
                  </children>
               </HBox>
               <HBox>
                  <children>
                      <Label text="Clear on draw " />
                      <CheckBox fx:id="clearCheckBox" onAction="#handleClearOnDrawAction" />
                  </children>
               </HBox>
               <Label fx:id="warn" />
               <HBox alignment="CENTER">
                  <children>
                      <Button fx:id="startButton" onAction="#handleStartAction" text="draw" />
                      <Button onAction="#handleClearAction" text="clear" />
                      <Label text="                    " />
                      <Button fx:id="button134" onAction="#handleSummaryAction1" text="1-3, 4" />
                      <Button fx:id="button578" onAction="#handleSummaryAction2" text="5-7, 8" />
                  </children>
               </HBox>
            <Label text="Day" />
           </children>
        </VBox>
    </bottom>
</BorderPane>
